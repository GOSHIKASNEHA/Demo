pipeline {
    agent any

    stages {

        stage('Checkout Code from GitHub') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/YOUR_USERNAME/YOUR_REPO_NAME.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'pip install pytest'
            }
        }

        stage('Run Test Cases') {
            steps {
                sh 'pytest'
            }
        }

        stage('Build Success') {
            steps {
                echo 'âœ… Jenkins Pipeline executed successfully!'
            }
        }
    }
}
